{
  "name": "springald",
  "version": "0.0.2",
  "description": "Simple application launcher, similar to Launchy.",
  "main": "index.html",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nw --enable-logging=stderr .",
    "lint": "eslint scripts main.js",
    "prettifyAll": "prettier --loglevel silent --write **/*.js"
  },
  "window": {
    "frame": true,
    "show": false,
    "resizable": false,
    "icon": "assets/icon.png",
    "position": "center",
    "always-on-top": true,
    "visible-on-all-workspaces": true
  },
  "single-instance": true,
  "author": "Szabolcs Kurdi",
  "license": "ISC",
  "chromium-args": "--enable-logging=stderr",
  "dependencies": {
    "superchild": "0.1.10"
  },
  "devDependencies": {
    "cross-env": "5.2.1",
    "eslint": "6.4.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "prettier": "1.18.2"
  }
}
